@model TestApp.Models.Student

    <script src="autocomplete.js"></script>
    <div class="container">
        <div class="spacer index-button-long mt-2">
            <a class="btn btn-primary a-btn-slide-text" asp-controller="Student" asp-action="Index">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <span><strong>Обратно</strong></span>
            </a>
        </div>
        <form action="Add" method="post">
            <div class="form-group mt-2">
                <label>Имя</label>
                <input asp-for="FirstName" id="Language" class="form-control"/>
            </div>
            <div class="form-group mt-2">
                <label>Фамилия</label>
                <input asp-for="LastName" id="Language" class="form-control"/>
            </div>
            <div class="form-group mt-2">
                <label >Школа</label>
                <input id="Language" class="form-control" asp-for="School" />
            </div>
            <div class="form-group mt-2">
                <label >Класс</label>
                <input class="form-control" name="Grade" asp-for="Grade"/>
            </div>
            <div class="form-group mt-2">
                <label >Вуз для поступления</label>
                <input class="form-control"  asp-for="DesiredUniversity" />
            </div>
            <div class="form-group mt-2">
                <label >Контактый телефон</label>
                <input class="form-control" asp-for="PhoneNumber"  />
            </div>
            <button type="submit" class="btn btn-primary index-button-long mt-2">Отправить!</button>
        </form>
    </div>

