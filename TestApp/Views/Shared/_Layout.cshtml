<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hi there!</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/base-stylesheet.css" rel="stylesheet" type="text/css" />
    <!-- Optional theme -->
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
</head>
<body style="background-image: url('https://sunderlandlab.sites.olt.ubc.ca/files/2020/01/BIO-BACKGROUND.jpg');
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;">

    <!-- Main block -->
    <div class="d-flex justify-content-center">
        <!-- Main container with border -->
        <div class="container border border-secondary justify-content-center" style="min-height: 97vh; margin: 1.5vh auto; background-color:white;">
            <!-- Container with header and content -->
            <div style="min-height: 97vh; margin-bottom: -45px; margin-left: -10px; margin-right:-10px" >
                <!-- Container with header -->
                <div class="container" style="padding:0px; margin-top:2px;">
                    <div class="col-12">
                        <nav class="navbar navbar-expand-lg navbar-light bg-dark text-light" style="height: 40px;">
                            <a class="navbar-brand m-lg-2 text-light">PETRAHISTORY</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse bg-dark" id="navbarNav">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-controller="Statistics" asp-action="Index">Статистика</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-controller="Student" asp-action="Index">Студенты</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-controller="Lesson" asp-action="Index">Занятия</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-controller="About" asp-action="Index">Инфо</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
                <!--Container with content-->
                <div class="container">
                    @RenderBody()
                <!-- End for container with content-->
                </div>
            <!--End for container header and content -->
            </div>
            <!--FOOTER -->
            <div class="container bg-dark text-light" style="height: 40px; margin: 2px -10px; width:auto;">
                <div class="row justify-content-center" style="margin: 7 auto;">
                    Powered by Andrii Sotnikov, Kyiv, @DateTime.Now.Year
                </div>
            </div>
            <!--Main container with border-->
        </div>
        <!--Main block-->
    </div>
</body>
</html>
