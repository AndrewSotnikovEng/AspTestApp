@model TestApp.Models.LessonViewModel

    <link rel="stylesheet" href="~/css/timepicker.css" />

    <div class="container">
        <div class="spacer index-button-long mt-2">
            <a class="btn btn-primary a-btn-slide-text" asp-controller="Lesson" asp-action="Index">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                <span><strong>Обратно</strong></span>
            </a>
        </div>
        <form action="Add" method="post">
            <div class="form-group mt-2 ui-widget mb-2">
                <label>Студент</label>
                <input class="form-control" id="StudentIdInput" asp-for="@Model.StudentNameAndId" />
            </div>
            <div class="form-group">
                <div class="container align-to-left mb-2">
                    <div class="row mb-1">
                        <div class="col-4">
                            <label>Дата</label>
                        </div>
                        <div class="col-2 text-center">
                            <label>Начало</label>
                        </div>
                        <div class="col-2 text-center">
                            <label>Конец</label>
                        </div>
                    </div>
                    <div class="row mb-1">
                        <div class="col-4">
                            <input type="text" id="datepicker" asp-for="LessonDate" class="form-control" value="@Model.LessonDate">
                        </div>
                        <div class="col-2">
                            <input type="text" class="bs-timepicker form-control" asp-for="StartTime" value="@Model.StartTime" />
                        </div>
                        <div class="col-2">
                            <input type="text" class="bs-timepicker form-control" asp-for="EndTime" value="@Model.EndTime" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group mt-2">
                <label>План</label>
                <input class="form-control" asp-for="Agenda" value="@Model.Agenda" />
                <input class="form-control" style="display:none" asp-for="LessonId" value="@Model.LessonId" />
            </div>
            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" id="orderedCheckBox" asp-for="Ordered" checked="@Model.Ordered">
                <label class="form-check-label" for="orderedCheckBox">
                    Оплачено
                </label>
            </div>
            <button type="submit" class="btn btn-primary index-button-long mt-2">Отправить!</button>
        </form>
    </div>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/js/students-autocomplete.js"></script>
    <script src="~/js/timepicker.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
    <script>
        $(function () {
            $('.bs-timepicker').timepicker();
        });
    </script>

