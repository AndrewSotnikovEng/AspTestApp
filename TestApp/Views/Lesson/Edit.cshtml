@model TestApp.Models.LessonViewModel

<div class="container">
    <div class="spacer index-button-long mt-2">
        <a class="btn btn-primary a-btn-slide-text" asp-controller="Lesson" asp-action="Index">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <span><strong>Обратно</strong></span>
        </a>
    </div>
    <form action="Add" method="post">
        <div class="form-group">
            <div class="container align-to-left">
                <label for="birthday">Начало:</label>
                <div class="row">
                    <div class="col-4">
                        <input type="date" id="birthday" asp-for="LessonDate" class="form-control" value="@Model.LessonDate">
                    </div>
                    <div class="col-2">
                        <input type="time" id="birthday" asp-for="StartTime" class="form-control" value="@Model.StartTime">
                    </div>
                    <div class="col-2">
                        <input type="time" id="birthday" asp-for="EndTime" class="form-control" value="@Model.EndTime">
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group mt-2">
            <label>План</label>
            <input class="form-control" asp-for="Agenda" value="@Model.Agenda" />
            <input class="form-control" style="display:none" asp-for="LessonId" value="@Model.LessonId" />
        </div>
        <div class="form-check mt-2">
            <input class="form-check-input" type="checkbox" id="orderedCheckBox" asp-for="Ordered" value="@Model.Ordered">
            <label class="form-check-label" for="orderedCheckBox">
                Оплачено
            </label>
        </div>
        <button type="submit" class="btn btn-primary index-button-long mt-2">Отправить!</button>
    </form>
</div>

